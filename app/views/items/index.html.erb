<h1>All Items</h1>

<div class="row">
  <% @item.each do |item| %>
    <div class="col-md-4">
      <div class="thumbnail img-thumbnail item-thumbnail">
        <%= image_tag item.image, class: "img-rounded" %>
        <div class="caption">
          <h3><%= item.name %></h3>
          <p><%= link_to "View This Item", item_path(item), class: "btn btn-primary", role: "button" %></p>
        </div>
      </div>
    </div>
    <% end %>
</div>
